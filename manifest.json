{
    "name": "SteamScamBlocker",
    "version": "1.0",
    "description": "An Extention to block known steam scam websites.",
     "manifest_version": 2,
    "background": {"scripts":["background.js"]},

        "icons": {
        "16": "icons/logo_16x16.png",
        "48": "icons/logo_48x48.png",
        "128": "icons/logo_128x128.png"
        },

        "browser_action": {
        "default_title": "Reload extension"
    },

    "permissions": ["webRequest", "webRequestBlocking", "<all_urls>", "management"]
}

